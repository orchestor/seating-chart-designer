/* design spot */

.design-spot {
  background-color: $white;
  box-shadow: 0 0 1px $grey-lighten-1 inset;
  cursor: pointer;
  float: left;
  text-align: center;
}

.design-spot[data-type="JUNCTION"] {
  background-color: $grey-lighten-4;
}

.design-spot[data-type="WALL"] {
  background-color: $grey-lighten-4;
  transition: .15s background-color;
}

.design-spot[data-type="WALL"]:not(.is-present):hover {
  background-color: $grey-lighten-1;
}

.design-spot[data-type="WALL"].is-present {
  background-color: $blue-grey-base;
}

/* spot size - 1 */

$designFontSize--1: 2.3rem;
$designSpotSize--1: 55px;
$designWallSize--1: 6px;

.design-grid[data-zoom="1"] .design-spot {
  height: $designSpotSize--1;
  width: $designSpotSize--1;
}
.design-grid[data-zoom="1"] .design-spot .material-icons {
  font-size: 2.5rem;
  line-height: $designSpotSize--1;
}
.design-grid[data-zoom="1"] .design-spot[data-type="JUNCTION"] {
  height: $designWallSize--1;
  width: $designWallSize--1;
}
.design-grid[data-zoom="1"] .design-spot[data-type="WALL"][data-orientation="VERTICAL"] {
  width: $designWallSize--1;
}
.design-grid[data-zoom="1"] .design-spot[data-type="WALL"][data-orientation="HORIZONTAL"] {
  height: $designWallSize--1;
}

